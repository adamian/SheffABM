<application>
  <name>Action Detector</name>
  <module>
    <name>bodyTrack</name>
    <parameters>/bodyImage:i /bodyVector:o /bodyImage:o</parameters>
    <node>localhost</node>
    <stdio>localhost</stdio>
  </module>
  <module>
    <name>faceTrackSeg</name>
    <parameters>/faceImage:i /faceVector:o /faceImage:o</parameters>
    <node>localhost</node>
    <stdio>localhost</stdio>
  </module>
  <module>
    <name>actionSkeleton</name>
    <parameters>/skeleImage:i /skeleVector:o /skeleImage:o 0</parameters>
    <node>localhost</node>
    <stdio>localhost</stdio>
  </module>
  <module>
  <name>yarpview</name>
    <parameters>--name /faceView:i</parameters>
    <node>localhost</node>
  </module>
  <module>
  <name>yarp</name>
    <parameters>read /readFaceInfo:i</parameters>
    <node>localhost</node>
  </module>
  <module>
  <name>yarpview</name>
    <parameters>--name /bodyView:i</parameters>
    <node>localhost</node>
  </module>
  <module>
  <name>yarp</name>
    <parameters>read /readBodyInfo:i</parameters>
    <node>localhost</node>
  </module>
  <module>  
  <name>yarpview</name>
    <parameters>--name /skeleView:i</parameters>
    <node>localhost</node>
  </module>
  <module>
  <name>yarp</name>
    <parameters>read /readSkeleInfo:i</parameters>
    <node>localhost</node>
  </module>  
  <connection>
    <from>/icub/cam/left</from>
    <to>/faceImage:i</to>
    <protocol>udp+recv.bayer+method.nearest+mjpeg</protocol>
  </connection> 
  <connection>
    <from>/faceImage:o</from>
    <to>/faceView:i</to>
    <protocol>udp</protocol>
  </connection>
  <connection>
    <from>/faceVector:o</from>
    <to>/readFaceInfo:i</to>
    <protocol>tcp</protocol>
  </connection>  
  <connection>
    <from>/icub/cam/left</from>
    <to>/bodyImage:i</to>
    <protocol>udp+recv.bayer+method.nearest+mjpeg</protocol>
  </connection> 
  <connection>
    <from>/bodyImage:o</from>
    <to>/bodyView:i</to>
    <protocol>udp</protocol>
  </connection>
  <connection>
    <from>/bodyVector:o</from>
    <to>/readBodyInfo:i</to>
    <protocol>tcp</protocol>
  </connection>
   <connection>
    <from>/bodyImage:o</from>
    <to>/skeleImage:i</to>
    <protocol>udp+mjpeg</protocol>
  </connection> 
  <connection>
    <from>/skeleImage:o</from>
    <to>/skeleView:i</to>
    <protocol>udp</protocol>
  </connection>
  <connection>
    <from>/skeleVector:o</from>
    <to>/readSkeleInfo:i</to>
    <protocol>tcp</protocol>
  </connection>  
</application>

